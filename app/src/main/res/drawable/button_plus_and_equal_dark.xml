<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android" android:visible="true">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="#272727"></stroke>
            <gradient android:centerColor="#677EF4">
            </gradient>
            <corners android:radius="12dp"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#19122B"> </solid>
            <corners android:radius="32dp"></corners>
        </shape>
    </item>
</animated-selector>