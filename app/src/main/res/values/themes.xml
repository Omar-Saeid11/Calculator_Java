<resources>
    <!-- Base application theme -->
    <style name="Theme.CalculatorJava" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.CalculatorJava.Light" parent="Theme.CalculatorJava">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="buttonStyle">@style/buttonShapeLightMode</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.CalculatorJava.Dark" parent="Theme.CalculatorJava">
        <item name="colorPrimary">@color/PrimarybackgroundColor</item>
        <item name="colorPrimaryDark">@color/outlineScreenShowColor</item>
        <item name="buttonStyle">@style/buttonShape</item>
    </style>

    <style name="textViewProperties" parent="Widget.AppCompat.TextView">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="buttonShape" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/widthButton</item>
        <item name="android:layout_height">@dimen/heightButton</item>
        <item name="android:background">@drawable/background_buttons</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonShapeLightMode" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/widthButton</item>
        <item name="android:layout_height">@dimen/heightButton</item>
        <item name="android:background">@drawable/background_buttons_light_mode</item>
        <item name="android:textColor">@color/PrimarybackgroundColor</item>
    </style>
</resources>
